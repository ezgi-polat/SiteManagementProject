


@model List<User>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><RolGoster user-id="@item.Id"></RolGoster></td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                    @*<a asp-action="AddClaim" asp-route-id="@item.Id" asp-controller="Female" class="btn btn-info btn-sm">Claim Ekle</a>*@


                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td>Sisteminizde kayıtlı rol bulunmamaktadır.</td>
        </tr>
    }

</table>
