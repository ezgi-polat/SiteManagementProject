

@model RoleViewModel

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form asp-action="AddRole" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
