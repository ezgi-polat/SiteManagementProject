@model List<Pages>
@{
}

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<a asp-action="Add" asp-controller="Page" class="btn btn-info btn-sm my-2">Yeni Sayfa Ekle</a>
<table class="table table-sm table-hover">
    <tr>
        <td>
            Ad
        </td>
        <td>Açıklama</td>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PageName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.PageId" class="btn btn-danger btn-sm">Sil</a>

                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td>Sisteminizde kayıtlı sayfa bulunmamaktadır.</td>
        </tr>
    }

</table>
