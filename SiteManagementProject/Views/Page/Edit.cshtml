

@model Pages

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<form asp-action="Edit" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="PageId" />
    <div class="form-group">
        <label asp-for="PageName"></label>
        <span asp-validation-for="PageName"></span>
        <input asp-for="PageName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MenuId"></label>
        <span asp-validation-for="MenuId"></span>
        <input asp-for="MenuId" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <input type="submit" class="btn btn-info" value="Kaydet" />
</form>


